<div class="container">
  <div class="row">
    <h2>バンド登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "bands/shared/error_messages", resource: resource %>

        <div class="form-group">
            <br>
            <%= f.label :バンド名, class: "brown-border px-3" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control offset-1 col-5" %>
            <%= f.label :フリガナ %>
            <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana", class: "form-control offset-1 col-5" %>
        </div>

        <div class="form-group">
            <%= f.label :代表者　, class: "brown-border px-3" %>
            <%= f.text_field :rep_name, autofocus: true, autocomplete: "rep_name", class: "form-control offset-1 col-5" %>
            <%= f.label :フリガナ %>
            <%= f.text_field :rep_name_kana, autofocus: true, autocomplete: "rep_name_kana", class: "form-control offset-1 col-5" %>
        </div>

        <div class="form-group">
            <%= f.label :メールアドレス, class: "brown-border px-3" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"例）example@mail", class: "form-control offset-1 col-11" %>
        </div>

        <div class="form-group">
            <%= f.label :パスワード　　, class: "brown-border px-3" %>
            <%= f.password_field :password, placeholder:"最低６文字必要", autocomplete: "new-password", class: "form-control offset-1 col-11" %>
        </div>

        <div class="form-group">
            <%= f.label :パスワード確認, class: "brown-border px-3" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control offset-1 col-11" %>
        </div>

        <div class="row">
            <%= f.submit "会員登録", class: "btn btn-lg btn-primary mx-auto" %>
        </div>
      <% end %>

      <div class="row">
        <div class="offset-9">
           <%= link_to "会員の方はこちらからログイン", new_band_session_path, class: "btn btn-sm btn-outline-danger" %>
        </div>
      </div>
  </div>
</div>
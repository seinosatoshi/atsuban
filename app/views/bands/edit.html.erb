<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <div class="body">
    	<% if @band.errors.any? %>
    	  <div id="error_explanation" class="alert alert-danger">
    		<%= @band.errors.count %> errors prohibited this obj from being saved:
    		  <ul>
    		    <% @band.errors.full_messages.each do |message| %>
    		      <li><%= message %></li>
    		    <% end %>
    		  </ul>
    	  </div>
    	<% end %>

    	<h2>編集</h2>
        <%= form_for(@band) do |f| %>
          <% if @band.errors.any? %>
          <% end %>
          <h4 class="edit-space">バンド名</h4>
          <%= f.text_field :name, class: "form-control offset-1 col-5" %>
          <h4 class="edit-space">代表者</h4>
          <%= f.text_field :rep_name, class: "form-control offset-1 col-5" %>
          <h4 class="edit-space">アーティスト写真</h4>
          <%= f.attachment_field :image %>
          <h4 class="edit-space">活動地</h4>
          <%= f.text_field :area, placeholder:"例）東京：渋谷、新宿", class: "form-control offset-1 col-5" %>
          <h4 class="edit-space">ジャンル</h4>
          <%= f.text_field :genre, placeholder:"例）ロック、ポップ", class: "form-control offset-1 col-5" %>
          <h4 class="edit-space">Youtubeリンク(Youtube「共有」内の「embed」がついているhttpリンクを貼ってください)</h4>
          <%= f.text_field :youtube_url, placeholder:"https://〜/embed/〜", class: "form-control offset-1 col-5" %>
          <h4 class="edit-space">リンク(HPなど)</h4>
          <%= f.text_field :link, placeholder:"例）https://〜", class: "form-control offset-1 col-5" %>
          <h4 class="edit-space">Twitter</h4>
          <%= f.text_field :sns, placeholder:"例）https://〜", class: "form-control offset-1 col-5" %>
          <h4 class="edit-space">バンド紹介文</h4>
          <%= f.text_area :introduction, class: "form-control offset-1 col-5" %>
          <h4 class="edit-space">ライブ告知など</h4>
          <%= f.text_area :tips, class: "form-control offset-1 col-5" %>
          <%= f.submit '更新', class: "edit-btn btn-lg btn-primary form-control offset-1 col-5" %>
        <% end %>
        <% if band_signed_in? && @band.id == current_band.id %>
          <%= link_to "退会", band_registration_path(current_band), method: :DELETE, "data-confirm" => "本当に退会しますか？", class: "btn btn-outline-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
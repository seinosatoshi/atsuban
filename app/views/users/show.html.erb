<div class="col-md-5 col-md-offset-3">
  <% if flash[:alert] %>
    <p><%= flash[:alert] %><%= current_user.name %>さん</p>
  <% end %>
  <table class="table">
    <thead>
      <tr>
  	    <th>お気に入りしたバンド</th>
  	  </tr>
  	</thead>
  	<tbody>
      <% @subscribes.each do |subscribe| %>
        <tr>
          <td>
          	<%= attachment_image_tag subscribe.band, :image, :fill,40,40, format: "jpeg", class: "attachment_image", fallback: "no_image.jpg" %>
          </td>
    	  <td>
    	    <%= link_to band_path(subscribe.band) do %>
    	      <h4><%= subscribe.band.name %></h4>
    	    <% end %>
    	  </td>
    	</tr>
      <% end %>
    </tbody>
  </table>
</div>
